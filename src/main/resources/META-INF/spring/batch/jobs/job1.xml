<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/batch"
xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd">


  <beans:bean id="succeedingTasklet" class="com.enterra.batch.admin.util.TestTasklet" />
  <beans:bean id="failingTasklet" class="com.enterra.batch.admin.util.TestTasklet" >
    <beans:property name="fail" value="true" />
  </beans:bean>

  <job id="job1">
    <step id="step1">
      <tasklet ref="succeedingTasklet" />
    </step>
  </job>
</beans:beans>
